<Window x:Class="URApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:URApplication.ViewModels"
        xmlns:convert="clr-namespace:URApplication.ViewModels.Convert"
        mc:Ignorable="d"

        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <convert:WeightConvert x:Key="WeightConvert"/>
        <convert:DateConvert x:Key="DateConvert"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="202*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" x:Name="Panel" Height="30" Width="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1">
            <Button Width="50" HorizontalAlignment="Left" Margin="10 0" Content="Удалить"
                    Command="{Binding UninstallApplicationCommand}"
                    CommandParameter="{Binding SelectedRow.UninstallCmd}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedRow}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rows, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" EnableRowVirtualization="True"
                  SelectionMode="Single" SelectedItem="{Binding SelectedRow}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn  Width="SizeToCells" CanUserResize="False"
                                        IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Image Source="{Binding IconSource}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Имя" Width="SizeToCells" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Издатель" Width="SizeToCells" Binding="{Binding Publisher}"/>
                <DataGridTextColumn Header="Дата установки" Width="SizeToCells" Binding="{Binding InstallDate,
                    Converter = {StaticResource DateConvert}}" >
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn  Header="Размер" Binding="{Binding Weight, Converter={StaticResource WeightConvert}}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger >
                                    
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Версия" Binding="{Binding Version}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
</Window>
