<Window x:Class="URApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:URApplication"
        xmlns:vm="clr-namespace:URApplication.ViewModels" 
        mc:Ignorable="d"

        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="202*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" x:Name="Panel" Height="30" Width="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Rows}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Издатель" Binding="{Binding Publisher}"/>
                <DataGridTextColumn Header="Дата установки" Binding="{Binding InstallDate}"/>
                <DataGridTextColumn Header="Размер" Binding="{Binding Weight}"/>
                <DataGridTextColumn Header="Версия" Binding="{Binding Version}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
